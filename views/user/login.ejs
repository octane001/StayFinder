<% layout ("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-6 offset-3 mt-3">
    <h1>Login for Stay Finder</h1>
    <form action="/login" method="post" class="form-control" novalidate>
      <div class="mb-3">
        <label for="username" class="form-lable">Username</label>
        <input
          type="text"
          placeholder="Enter username"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-lable">Password</label>
        <input
          type="password"
          placeholder="Enter password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
